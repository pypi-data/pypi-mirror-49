<ItemWidget>:
    size_hint: None, None
    width: self.base_width
    height: self.minimum_height
    orientation: 'vertical'


<DeviceWidget>:
    Symbol:
        size_hint: 1, None
        height: dp(80)
        font_size: dp(40)
        symbol: root.getSymbol()
        color: 0, 0, 0, 1
    Label:
        size_hint: None, None
        width: dp(100)
        font_size: sp(14)
        text_size: dp(95), None
        size: self.texture_size
        text: root.name
        halign: 'center'


<CategorySeparator>:
    size_hint: 1, None
    height: sp(20)
