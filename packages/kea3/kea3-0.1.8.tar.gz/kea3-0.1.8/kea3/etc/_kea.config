dbpath: ~/.cache/kea/db
# dbconnection: "postgresql+psycopg2://kea:KeaKea42@localhost/kea"
scan:
  ignore:
    - '*.pyc'
    - '*~'
    - '.*'
keywords:
  p:
    alias: project
  project: &project
    description: Project
    dtype: record
    stats: true
    strfmt: '{title} ({contact})'
    keywords:
      title:
        description: Project title
      contact:
        description: Contact person
      email:
        description: Contact email
  e:
    alias: experiment
  experiment:
    stats: true
    description: Experiment Identifier
    dtype: record
    strfmt: '{title} ({contact})'
    keywords:
      title:
        description: Project title
      contact:
        description: Contact person
      email:
        description: Contact email
      project: *project
  sampleid:
    description: biological sample id
  genome:
    description: genome build used for this data
    cardinality: '+'
  description:
    description: A short description of this file
    cardinality: '+'
  desc:
    alias: description
  basename:
    description: File basename (auto filled in upon first observation).
  size:
    description: File size
    dtype: int
  tag:
    stats: true
    description: Tag a file
    cardinality: '+'
  test:
    description: For testing purposes
    dtype: str
  xlink:
    description: external link for this file
    dtype: str
    cardinality: '+'
